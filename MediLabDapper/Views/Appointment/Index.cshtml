@model IEnumerable<ResultAppointmentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">İletişim</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:4%">#</th>
                        <th style="width:16%">Durum Değişikliği</th>
                        <th style="width:14%">Ad Soyad</th>
                        <th style="width:14%">E-posta</th>
                        <th style="width:12%">Doktor</th>
                        <th style="width:12%">Departman</th>
                        <th style="width:12%">Tarih - Saat</th>
                        <th style="width:10%">Durumu</th>
                        <th style="width:6%" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>
                                @if (item.IsApproved == StatusAppointmentDto.Onaylı)
                                {
                                    <a href="/Appointment/DeclineAppointment/@item.AppointmentId" class="btn btn-outline-danger">Reddet</a>
                                    <a href="/Appointment/WaitingAppointment/@item.AppointmentId" class="btn btn-outline-warning">Beklet</a>
                                }
                                else if (item.IsApproved == StatusAppointmentDto.Reddedildi)
                                {
                                    <a href="/Appointment/ApprovedAppointment/@item.AppointmentId" class="btn btn-outline-success">Onayla</a>
                                    <a href="/Appointment/WaitingAppointment/@item.AppointmentId" class="btn btn-outline-warning">Beklet</a>
                                }
                                else
                                {
                                    <a href="/Appointment/ApprovedAppointment/@item.AppointmentId" class="btn btn-outline-success">Onayla</a>
                                    <a href="/Appointment/DeclineAppointment/@item.AppointmentId" class="btn btn-outline-danger">Reddet</a>
                                }
                            </td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.DoctorName</td>
                            <td>@item.DepartmentName</td>
                            <td>@item.Date.ToString("dd-MM-yyyy") - @item.Time.ToString("hh\\:mm")</td>
                            <td>
                                @if (item.IsApproved == StatusAppointmentDto.Onaylı)
                                {
                                    <span class="badge bg-label-success me-1">Onaylı</span>
                                }
                                else if (item.IsApproved == StatusAppointmentDto.Reddedildi)
                                {
                                    <span class="badge bg-label-danger me-1">Reddedildi</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-warning me-1">Beklemede</span>
                                }
                            </td>
                            <td class="text-center">
                                <a href="/Appointment/UpdateAppointment/@item.AppointmentId" class="btn btn-sm btn-info rounded-pill me-2">✏️</a>
                                <button type="button" class="btn btn-sm btn-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.AppointmentId">
                                    🗑️
                                </button>

                                <div class="modal fade" id="deleteModal-@item.AppointmentId" tabindex="-1" aria-labelledby="deleteModalLabel-@item.AppointmentId" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content rounded-3 shadow">
                                            <div class="modal-header">
                                                <h5 class="modal-title w-100 text-center fs-4 fw-bold" id="deleteModalLabel-@item.AppointmentId">Uyarı !</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bu kaydı silmek istediğinize emin misiniz?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                                <a href="/Appointment/DeleteAppointment/@item.AppointmentId" class="btn btn-danger">Sil</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="/Appointment/CreateAppointment" class="btn btn-primary rounded-pill shadow-sm px-4">Yeni Hasta Randevusu Oluştur</a>
    </div>
</div>