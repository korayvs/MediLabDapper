@model IEnumerable<ResultTestimonialDto>
@*
    _DefaultTestimonialComponent
*@

<section id="testimonials" class="testimonials section">

    <div class="container">

        <div class="row align-items-center">

            <div class="col-lg-5 info" data-aos="fade-up" data-aos-delay="100">
                <h3>Değerlendirmeler</h3>
                <p>
                    Hastalarımızın memnuniyeti, Medilab için en önemli önceliktir. 
                    Gerçek deneyimler ve geri bildirimler sayesinde hizmet kalitemizi sürekli geliştiriyor ve her hastaya güvenli, kaliteli ve şefkatli sağlık hizmeti sunmayı hedefliyoruz.
                </p>
            </div>

            <div class="col-lg-7" data-aos="fade-up" data-aos-delay="200">

                <div class="swiper init-swiper">
                    <script type="application/json" class="swiper-config">
                        {
                          "loop": true,
                          "speed": 600,
                          "autoplay": {
                            "delay": 5000
                          },
                          "slidesPerView": "auto",
                          "pagination": {
                            "el": ".swiper-pagination",
                            "type": "bullets",
                            "clickable": true
                          }
                        }
                    </script>
                    <div class="swiper-wrapper">

                        @foreach (var item in Model)
                        {
                            <div class="swiper-slide">
                                <div class="testimonial-item">
                                    <div class="d-flex">
                                        <img src="@item.ImageUrl" class="testimonial-img flex-shrink-0" alt="">
                                        <div>
                                            <h3>@item.NameSurname</h3>
                                            <h4>@item.JobName</h4>
                                            <div class="stars">

                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= item.Review)
                                                    {
                                                        <i class="bi bi-star-fill"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star"></i>
                                                    }
                                                }

                                            </div>
                                        </div>
                                    </div>
                                    <p>
                                        <i class="bi bi-quote quote-icon-left"></i>
                                        <span>@item.Comment</span>
                                        <i class="bi bi-quote quote-icon-right"></i>
                                    </p>
                                </div>
                            </div>
                        }
                        <!-- End testimonial item -->

                    </div>
                    <div class="swiper-pagination"></div>
                </div>

            </div>

        </div>

    </div>

</section>