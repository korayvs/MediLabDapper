@model IEnumerable<ResultDoctorWithDepartmentDto>
@*
    _DefaultDoctorComponent
*@

<section id="doctors" class="doctors section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Doktorlar</h2>
        <p>
            Medilab’de alanında uzman doktor kadromuz, hastalarımıza güvenilir ve kaliteli sağlık hizmeti sunar.
            Her doktorumuz, hastaların ihtiyaçlarına özenle yaklaşarak doğru tanı ve etkili tedavi sağlar.
        </p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            @foreach (var item in Model)
            {
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="team-member d-flex align-items-start">
                        <div class="pic"><img src="@item.ImageUrl" class="img-fluid" alt=""></div>
                        <div class="member-info">
                            <h4>@item.NameSurname</h4>
                            <span>@item.DepartmentName</span>
                            <p>@item.Description</p>
                            <div class="social">
                                <a href="@item.SocialMedia1"><i class="bi bi-twitter-x"></i></a>
                                <a href="@item.SocialMedia2"><i class="bi bi-facebook"></i></a>
                                <a href="@item.SocialMedia3"><i class="bi bi-instagram"></i></a>
                                <a href="@item.SocialMedia4"> <i class="bi bi-linkedin"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!-- End Team Member -->

        </div>

    </div>

</section>