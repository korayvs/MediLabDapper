@model CreateAppointmentDto
@*
    _DefaultAppointmentComponent
*@

<section id="appointment" class="appointment section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Randevu</h2>
        <p>Medilab’de kolayca randevu alabilirsiniz. Uzman ekibimiz, size uygun tarih ve saatte hızlı ve güvenli bir şekilde hizmet vermeye hazırdır.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <form asp-controller="Default" asp-action="DefaultAppointmentCreate" method="post" role="form" class="php-email-form">
            <div class="row">
                <div class="col-md-4 form-group">
                    <input type="text" asp-for="FullName" class="form-control" placeholder="Ad Soyad">
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <input type="email" class="form-control" asp-for="Email" placeholder="E-posta">
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="Telefon Numarası">
                </div>
            </div>
            <div class="row">

                <div class="col-md-4 form-group mt-3">
                    <select asp-for="DepartmentId" item="DepartmentId" class="form-select">
                        <option value="">Bölüm Seçin</option>
                        @foreach (var item in ViewBag.departments)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 form-group mt-3">
                    <select asp-for="DoctorId" id="DoctorId" class="form-select">
                        <option value="">Lütfen Önce Bölüm Seçin</option>
                    </select>
                </div>
                <div class="col-md-4 form-group mt-3">
                    <select id="AvailableAppointments" class="form-select">
                        <option value="">Saatler listelenecek</option>
                    </select>
                </div>

                <input type="hidden" asp-for="Date" id="HiddenDate" />
                <input type="hidden" asp-for="Time" id="HiddenTime" />
                <input type="hidden" name="SelectedAppointment" id="HiddenSelectedAppointment" />

            </div>

            <div class="form-group mt-3">
                <textarea class="form-control" asp-for="Message" rows="5" placeholder="Mesajınız (İsteğe Bağlı)"></textarea>
            </div>
            <div class="mt-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Randevu isteğiniz kaydedildi. İlginiz için teşekkür ederiz!</div>
                <div class="text-center"><button type="submit">Randevu Oluştur</button></div>
            </div>
        </form>

    </div>

</section>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $(function () {

        // When the department changes, fetch doctors for that department
        $("#DepartmentId").change(function () {
            const departmentId = $(this).val();
            const doctorSelect = $("#DoctorId");
            const appointmentSelect = $("#AvailableAppointments");

            doctorSelect.empty().append('<option value="">Seçiniz</option>');
            appointmentSelect.empty().append('<option value="">Uygun randevu saatleri burada listelenecek</option>');

            if (!departmentId) return;

            $.get('/AllAppointment/GetDoctorsByDepartmentId', { departmentId })
                .done(function (data) {
                    $.each(data, function (_, item) {
                        doctorSelect.append(`<option value="${item.value}">${item.text}</option>`);
                    });
                })
                .fail(function () {
                    doctorSelect.append('<option value="">Hata oluştu</option>');
                });
        });

        // When a doctor is selected, fetch available appointments
        $("#DoctorId").change(function () {
            const doctorId = $(this).val();
            const departmentId = $("#DepartmentId").val();
            const appointmentSelect = $("#AvailableAppointments");

            appointmentSelect.empty().append('<option value="">Lütfen önce departman ve doktor seçin</option>');

            if (!doctorId || !departmentId) return;

            $.get('/Default/DefaultAvailableAppointments', { departmentId, doctorId })
                .done(function (data) {
                    appointmentSelect.empty();
                    if (data?.length) {
                        appointmentSelect.append('<option value="">Uygun bir saat seçin</option>');
                        $.each(data, function (_, item) {
                            const val = `${item.appointmentId}|${item.date}|${item.time}`;
                            appointmentSelect.append(`<option value="${val}">${item.date} - ${item.time}</option>`);
                        });
                    } else {
                        appointmentSelect.append('<option value="">Uygun randevu bulunamadı</option>');
                    }
                })
                .fail(function () {
                    appointmentSelect.empty().append('<option value="">Hata oluştu</option>');
                });
        });

        // When an appointment is selected, populate hidden fields with date and time
        $("#AvailableAppointments").change(function () {
            const selected = $(this).val();
            $("#HiddenDate, #HiddenTime, #HiddenSelectedAppointment").val('');

            if (!selected?.includes('|')) return;

            const [id, dateStr, timeStr] = selected.split('|');
            const parts = dateStr.split('.');

            if (parts.length === 3) {
                const formattedDate = `${parts[2]}-${parts[1].padStart(2, '0')}-${parts[0].padStart(2, '0')}`;
                $("#HiddenDate").val(formattedDate);
                $("#HiddenTime").val(timeStr);
                $("#HiddenSelectedAppointment").val(selected);
            }
        });

        // Before submitting form, ensure an appointment is selected
        $("form").submit(function (e) {
            if (!$("#HiddenDate").val() || !$("#HiddenTime").val()) {
                e.preventDefault();
                alert("Lütfen uygun bir randevu saati seçin!");
            }
        });

    });
</script>
