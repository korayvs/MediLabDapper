@model IEnumerable<ResultServiceDto>
@*
    _DefaultServiceComponent
*@

<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hizmetler</h2>
        <p>Medilab’de, sağlık hizmetlerini en yüksek kalite standartlarında sunuyoruz. Uzman ekibimiz ve modern teknoloji ile tanı, tedavi ve bakım süreçlerinde güvenli ve etkili çözümler sağlıyoruz.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item  position-relative">
                        <div class="icon">
                            <i class="@item.ServiceIcon"></i>
                        </div>
                        <a href="#" class="stretched-link">
                            <h3>@item.Title</h3>
                        </a>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
            <!-- End Service Item -->

        </div>

    </div>

</section>