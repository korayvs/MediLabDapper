@model IEnumerable<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Değerlendirmeler</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%">#</th>
                        <th style="width:12%">Resim</th>
                        <th style="width:15%">Ad Soyad</th>
                        <th style="width:15%">Meslek</th>
                        <th style="width:10%">Puan</th>
                        <th style="width:28%">Yorum</th>
                        <th style="width:15%" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <th><img src="@item.ImageUrl" style="height:75px;width:75px;border-radius:50%" /></th>
                            <td>@item.NameSurname</td>
                            <td>@item.JobName</td>
                            <td>
                                @{
                                    string badgeClass = item.Review switch
                                    {
                                        >= 4 => "bg-success",
                                        3 => "bg-warning text-dark",
                                        _ => "bg-danger"
                                    };
                                }
                                <span class="badge @badgeClass fs-6 px-3 py-2">@item.Review / 5</span>
                            </td>
                            <td>
                                @(item.Comment.Length > 70
                                    ? item.Comment.Substring(0, 70) + "..."
                                    : item.Comment)
                            </td>
                            <td class="text-center">
                                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-info rounded-pill me-2">✏️</a>
                                <button type="button" class="btn btn-sm btn-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.TestimonialId">
                                    🗑️
                                </button>

                                <div class="modal fade" id="deleteModal-@item.TestimonialId" tabindex="-1" aria-labelledby="deleteModalLabel-@item.TestimonialId" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content rounded-3 shadow">
                                            <div class="modal-header">
                                                <h5 class="modal-title w-100 text-center fs-4 fw-bold" id="deleteModalLabel-@item.TestimonialId">Uyarı !</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bu kaydı silmek istediğinize emin misiniz?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="/Testimonial/CreateTestimonial" class="btn btn-primary rounded-pill shadow-sm px-4">Yeni Değerlendirme Ekle</a>
    </div>
</div>