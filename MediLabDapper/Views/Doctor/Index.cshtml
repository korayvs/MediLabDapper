@model IEnumerable<ResultDoctorWithDepartmentDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Doktor Listesi</h1>
<br />

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Bölüm</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th><img src="@item.ImageUrl" style="height:75px;width:75px;border-radius:50%" /></th>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>@item.DepartmentName</td>
            <td>
                <a href="/Doctor/DeleteDoctor/@item.DoctorId" class="btn btn-danger">Sil</a>
                <a href="/Doctor/UpdateDoctor/@item.DoctorId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Doctor/CreateDoctor" class="btn btn-primary">Yeni Doktor</a>