@model IEnumerable<ResultDoctorWithDepartmentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Doktorlar</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%">#</th>
                        <th style="width:15%">Resim</th>
                        <th style="width:15%">Ad Soyad</th>
                        <th style="width:15%">Bölüm</th>
                        <th style="width:25%">Açıklama</th>                        
                        <th style="width:15%" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <th><img src="@item.ImageUrl" style="height:75px;width:75px;border-radius:50%" /></th>
                            <td>@item.NameSurname</td>
                            <td>@item.DepartmentName</td>
                            <td>
                                @(item.Description.Length > 35
                                    ? item.Description.Substring(0, 35) + "..."
                                    : item.Description)
                            </td>                            
                            <td class="text-center">
                                <a href="/Doctor/UpdateDoctor/@item.DoctorId" class="btn btn-sm btn-info rounded-pill me-2">✏️</a>
                                <button type="button" class="btn btn-sm btn-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.DoctorId">
                                    🗑️
                                </button>

                                <div class="modal fade" id="deleteModal-@item.DoctorId" tabindex="-1" aria-labelledby="deleteModalLabel-@item.DoctorId" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content rounded-3 shadow">
                                            <div class="modal-header">
                                                <h5 class="modal-title w-100 text-center fs-4 fw-bold" id="deleteModalLabel-@item.DoctorId">Uyarı !</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bu kaydı silmek istediğinize emin misiniz?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                                <a href="/Doctor/DeleteDoctor/@item.DoctorId" class="btn btn-danger">Sil</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="/Doctor/CreateDoctor" class="btn btn-primary rounded-pill shadow-sm px-4">Yeni Doktor Ekle</a>
    </div>
</div>