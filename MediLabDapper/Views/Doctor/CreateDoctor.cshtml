@model CreateDoctorDto
@{
    ViewData["Title"] = "CreateDoctor";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>Yeni Doktor Ekle</h1>
<br />

<form method="post">

    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" asp-for="NameSurname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Resim Url</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bölüm</label>
        <select asp-for="DepartmentId" asp-items="@ViewBag.departments" class="form-control">
            <option disabled selected>Bölüm Seçiniz</option>
        </select>
    </div>

    <button class="btn btn-primary mt-4">Kaydet</button>

</form>