@model GetDoctorByIdDto
    @{
    ViewData["Title"] = "UpdateDoctor";
    // Layout = "~/Views/AdminLayout/Index.cshtml";     proje teması
}

<h1>Doktor Güncelle</h1>
<br />

<form method="post">

    <input type="hidden" asp-for="DoctorId" />
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" asp-for="NameSurname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Resim Url</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bölüm</label>
        <select asp-for="DepartmentId" asp-items="@ViewBag.departments" class="form-control">
            <option disabled>Bölüm Seçiniz</option>
        </select>
    </div>

    <button class="btn btn-info mt-4">Güncelle</button>

</form>