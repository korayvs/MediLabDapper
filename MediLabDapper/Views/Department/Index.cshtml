@model IEnumerable<ResultDepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<h3>Bölümler</h3>
<br />

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Bölüm Adı</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.DepartmentId</th>
            <td>@item.DepartmentName</td>
            <td>@item.Description</td>
            <td>
                <a href="/Department/DeleteDepartment/@item.DepartmentId" class="btn btn-danger">Sil</a>
                <a href="/Department/UpdateDepartment/@item.DepartmentId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Department/CreateDepartment" class="btn btn-primary">Yeni Bölüm</a>