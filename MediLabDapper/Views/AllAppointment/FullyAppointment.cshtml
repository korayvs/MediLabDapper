@model IEnumerable<ResultAppointmentDto>
@{
    ViewData["Title"] = "FullyAppointment";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Dolu Randevular</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:12%">Doktor</th>
                        <th style="width:12%">Departman</th>
                        <th style="width:12%">Tarih - Saat</th>
                        <th style="width:6%" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.fullyAppointments)
                    {
                        <tr>
                            <td>@item.DoctorName</td>
                            <td>@item.DepartmentName</td>
                            <td>@item.Date.ToString("dd-MM-yyyy") - @item.Time.ToString("hh\\:mm")</td>
                            <td class="text-center">
                                <a href="/Appointment/DetailAppointment/@item.AppointmentId" class="btn btn-sm btn-info rounded-pill me-2">Randevu Detayları</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a href="/AllAppointment/Index" class="btn btn-primary rounded-pill shadow-sm px-4" style="background-color:blue">Açık Randevular</a>
    </div>
</div>
