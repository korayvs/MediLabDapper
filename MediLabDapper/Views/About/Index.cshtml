@model IEnumerable<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Hakkımızda</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%">#</th>
                        <th style="width:70%">Açıklama</th>
                        <th style="width:25%" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">Hakkımızda bilgisi yok.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    @(item.AboutDescription.Length > 70
                                        ? item.AboutDescription.Substring(0, 70) + "..."
                                        : item.AboutDescription)
                                </td>
                                <td class="text-center">
                                    <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-sm btn-info rounded-pill me-2">✏️</a>
                                    <button type="button" class="btn btn-sm btn-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.AboutId">
                                        🗑️
                                    </button>

                                    <div class="modal fade" id="deleteModal-@item.AboutId" tabindex="-1" aria-labelledby="deleteModalLabel-@item.AboutId" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content rounded-3 shadow">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel-@item.AboutId">Onay</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Bu kaydı silmek istediğinize emin misiniz?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                                    <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="/About/CreateAbout" class="btn btn-primary rounded-pill shadow-sm px-4">Yeni Hakkımızda Ekle</a>
    </div>
</div>
